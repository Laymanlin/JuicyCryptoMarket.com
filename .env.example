# Session Secret
# IMPORTANT: Change this to a random secret in production
SESSION_SECRET=your-secret-key-here

# Node Environment
NODE_ENV=development

# Server Port
PORT=3001

# MongoDB Connection
# For local MongoDB instance
MONGODB_URI=mongodb://localhost:27017/juicycrypto
# For MongoDB Atlas (uncomment and use your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/juicycrypto

# JWT Configuration
# IMPORTANT: Use a strong, random secret in production
JWT_SECRET=your-very-long-random-secret-here-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000
