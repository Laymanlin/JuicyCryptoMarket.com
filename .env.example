# Session Secret
# IMPORTANT: Change this to a random secret in production
SESSION_SECRET=your-secret-key-here

# JWT Secret (required for user authentication)
# IMPORTANT: Change this to a strong random secret in production
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# MongoDB Connection String
# For local development: mongodb://localhost:27017/juicycrypto
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/juicycrypto
MONGODB_URI=mongodb://localhost:27017/juicycrypto

# Node Environment
NODE_ENV=development

# Server Port
PORT=3001

# CORS Allowed Origins (comma-separated for production)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000
